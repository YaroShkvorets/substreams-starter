{
  "name": "substreams",
  "displayName": "Substreams",
  "description": "Substreams Developer Environment Extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Data Science",
    "Programming Languages"
  ],
  "activationEvents": [
    "workspaceContains:substreams.yaml",
    "workspaceContains:substreams.yml"
  ],

  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "substreams-sf.helloWorld",
      "title": "Hello World"
    }],

    "walkthroughs": [
      {
        "id": "sampleWalkthrough",
        "title": "Get Started with Substreams",
        "description": "Build, stream and publish your first Substreams",
        "steps": [
          {
            "id": "introduction",
            "title": "Introduction",
            "description": "Welcome to My Extension! This walkthrough will guide you through its main features.",
            "media": {
              "image": "media/welcome.png",
              "altText": "Welcome image"
            }
          },
          {
            "id": "feature1",
            "title": "Feature 1: Do Something Amazing",
            "description": "Learn how to use the amazing Feature 1 of this extension.",
            "media": {
              "image": "media/feature1.png",
              "altText": "Feature 1 screenshot"
            },
            "completionEvents": ["onCommand:myExtension.feature1"]
          },
          {
            "id": "feature2",
            "title": "Feature 2: Another Cool Thing",
            "description": "Discover the power of Feature 2 and how it can improve your workflow.",
            "media": {
              "image": "media/feature2.png",
              "altText": "Feature 2 screenshot"
            },
            "completionEvents": ["onCommand:myExtension.feature2"]
          }
        ]
      }
    ]    
  },

  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
